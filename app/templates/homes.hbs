<section class="ui grid container house-listings">
  {{#if hasNoHomes}}
    <div class="row">
      <div class="column">
        <h4>
          Sorry we do not have any homes right now, come check back later.
        </h4>
      </div>
    </div>
  {{else}}
  <div class="row">
    <div class="eight wide column house-listings-filter">
      <span><strong>Listing Type: </strong> </span>
      {{#ui-dropdown class="inline" onChange=(action 'listTypeSelectionChange')}}
        <div class="text"> {{listingTypeSelection}}</div>
        <i class="dropdown icon"></i>
        <div class="menu">
        {{#each listingTypes as |listingType|}}
          <div class="item">
            {{listingType}}
          </div>
        {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
  </div>

  <div class="row">
    <div class="ui two column grid houses">
      {{#each model as |home|}}
        <div class="column">
          {{home-card home=home}}
        </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</section>
